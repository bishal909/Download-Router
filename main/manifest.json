{
    "manifest_version": 3,
    "name": "Download Router",
    "version": "1.0",
    "description": "Automatically move downloads to different directories based on file type.",
    "permissions": ["downloads"],
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "options_ui": {
      "page": "options.html",
      "open_in_tab": true
    }
}
  